@import url('https://fonts.googleapis.com/css?family=Rubik:400,500,700&display=swap');

@tailwind base;

/* https://tailwindcss.com/docs/adding-base-styles/#using-css */
h1 {
  @apply text-2xl;
}
h2 {
  @apply text-xl;
}
h3 {
  @apply text-lg;
}
h4 {
  @apply text-base;
}
h5 {
  @apply text-sm;
}
h6 {
  @apply text-xs;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  @apply font-black;
}

@tailwind components;

@tailwind utilities;

:root {
  --scrollbarBG: #35353b;
  --thumbBG: #26272d;
}

body {
  margin: 0;
  padding: 0;
  width: 100vw;
  height: 100vh;
  overflow-x: hidden;
  font-family: 'Rubik', serif;
}

pre {
  box-shadow: 0 2px 4px rgba(10, 10, 10, 0.15);
  border-radius: 10px;
}

.lift-on-hover {
  transition: all 0.25s ease-in-out;
}

.lift-on-hover:hover {
  transform: translateX(0.25rem);
}

.card {
  background: rgba(68, 68, 68, 0.03);
}
